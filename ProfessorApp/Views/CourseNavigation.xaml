<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfessorApp.Pages.CourseNavigation"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#222">

    <Grid>
        <ScrollView Grid.Row="1">
            <!--  Main Content  -->
            <VerticalStackLayout Padding="20" Spacing="10">

                <Label
                    x:Name="CourseLabel"
                    Margin="0,20,0,10"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="CourseName"
                    TextColor="White"
                    VerticalOptions="Start" />

                <!--  Navigation Buttons  -->
                <Button
                    BackgroundColor="DarkOrange"
                    Clicked="GoToSessionPage"
                    MaximumWidthRequest="600"
                    Text="Sessions"
                    TextColor="White" />

                <Button
                    BackgroundColor="DarkOrange"
                    Clicked="GoToAttPage"
                    MaximumWidthRequest="600"
                    Text="Attendance"
                    TextColor="White" />

                <Button
                    BackgroundColor="DarkOrange"
                    Clicked="GoToStudentManagmentPage"
                    MaximumWidthRequest="600"
                    Text="Student Managment"
                    TextColor="White" />
                <Button
                    BackgroundColor="DarkOrange"
                    Clicked="GoToQuizPage"
                    MaximumWidthRequest="600"
                    Text="Quiz Management"
                    TextColor="White" />

                <!--  Delete Course Button  -->
                <Button
                    Margin="0,15,0,35"
                    BackgroundColor="Red"
                    Clicked="ConfirmDelete"
                    Text="Delete Course"
                    TextColor="White"
                    WidthRequest="400" />

            </VerticalStackLayout>
        </ScrollView>

        <!--  Modal-style Delete Course Popup  -->
        <Frame
            x:Name="ConfirmDeletePopUp"
            Padding="15"
            BackgroundColor="#333"
            BorderColor="Red"
            CornerRadius="12"
            HeightRequest="150"
            IsVisible="False"
            WidthRequest="400">

            <StackLayout Spacing="10">
                <Label
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="Are you sure you want to delete this course? This cannot be undone."
                    TextColor="White" />

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Button
                        BackgroundColor="Red"
                        Clicked="OnDeleteCourseClicked"
                        Text="Confirm"
                        TextColor="White" />
                    <Button
                        BackgroundColor="Gray"
                        Clicked="OnConfirmCancelClicked"
                        Text="Cancel"
                        TextColor="White" />
                </HorizontalStackLayout>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>