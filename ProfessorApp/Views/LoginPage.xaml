<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfessorApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#769576">
    <!--  Diego Cabanas: Created UI designed by Yoojin  -->
    <StackLayout
        Padding="10"
        Spacing="20"
        VerticalOptions="Center">
        <Frame
            Padding="0"
            BackgroundColor="White"
            BorderColor="Transparent"
            CornerRadius="10"
            HasShadow="True"
            MaximumWidthRequest="450">
            <VerticalStackLayout Spacing="20" Padding="20">
                <!-- Transparent background layer for touch passthrough -->
                <Grid HeightRequest="150">
                    <Image
                        Source="login_background.png"
                        Aspect="AspectFill"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        InputTransparent="True" />
                    <Image
                        Source="utdlogo.png"
                        HeightRequest="100"
                        WidthRequest="350"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        InputTransparent="True" />
                    <BoxView
                        HeightRequest="50"
                        HorizontalOptions="Fill"
                        VerticalOptions="End"
                        InputTransparent="True">
                        <BoxView.Background>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <GradientStop Offset="0" Color="White" />
                                <GradientStop Offset="1" Color="Transparent" />
                            </LinearGradientBrush>
                        </BoxView.Background>
                    </BoxView>
                </Grid>
                <!-- Original input controls -->
                <StackLayout Spacing="20">
                    <Label
                        Margin="0,0,0,10"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="Center"
                        Text="Welcome Back"
                        TextColor="DarkGreen" />
                    <Label
                        Margin="0,0,0,10"
                        FontSize="15"
                        HorizontalOptions="Center"
                        Text="Please sign in or register a new account"
                        TextColor="Black" />
                    <Frame
                        Padding="0"
                        BackgroundColor="White"
                        BorderColor="Black"
                        CornerRadius="10">
                        <Entry
                            x:Name="identifierEntry"
                            Placeholder="ID, Email or Username"
                            TextColor="Black"
                            Visual="Material" />
                    </Frame>
                    <Frame
                        Padding="0"
                        BackgroundColor="White"
                        BorderColor="Black"
                        CornerRadius="10">
                        <Entry
                            x:Name="passwordEntry"
                            IsPassword="True"
                            Placeholder="Password"
                            TextColor="Black" />
                    </Frame>
                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="Orange"
                        Clicked="OnLoginClicked"
                        MaximumWidthRequest="400"
                        Text="Sign In"
                        TextColor="Black" />
                    <Label
                        Margin="0,0,0,-10"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Register new account"
                        TextColor="Green">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GoToRegister" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label
                        x:Name="statusLabel"
                        HorizontalOptions="Center"
                        TextColor="Red" />
                </StackLayout>
            </VerticalStackLayout>
        </Frame>
    </StackLayout>
</ContentPage>