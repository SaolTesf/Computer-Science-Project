<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfessorApp.Views.LoginPage"
             Title="Attendance Manager"
             BackgroundColor="#222">
    <StackLayout Padding="10" VerticalOptions="Center" Spacing="20">
        <Image Source="utd_logo.png" HeightRequest="120" VerticalOptions="Center" />
        
        <Label Text="Login" FontSize="Large" TextColor="White" HorizontalOptions="Center" FontAttributes="Bold" Margin="0,0,0,30" />

        <Frame Padding="20" 
               BorderColor="DarkOrange" 
               MaximumWidthRequest="600" 
               CornerRadius="10" 
               HasShadow="True"
               BackgroundColor="#333">
            <StackLayout Spacing="20">
                <Entry TextColor="White" x:Name="identifierEntry" Placeholder="ID, Email or Username" />
                <Entry TextColor="White" x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
                <Button Text="Login" MaximumWidthRequest="400" Clicked="OnLoginClicked" Margin="0,10,0,0" BackgroundColor="Green" TextColor="White" />
                <Button Text="Register Account" MaximumWidthRequest="400" Clicked="GoToRegister" Margin="0,10,0,0" BackgroundColor="Grey" TextColor="White" />
                <Label x:Name="statusLabel" TextColor="Red" HorizontalOptions="Center" />
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>