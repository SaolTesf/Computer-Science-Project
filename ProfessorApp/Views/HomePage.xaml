<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfessorApp.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    BackgroundColor="#222">

    <Grid>
        <ScrollView Grid.Row="1">
            <!--  Main Content  -->
            <VerticalStackLayout Padding="20" Spacing="10">

                <Label
                    Margin="0,20,0,10"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="Home Page"
                    TextColor="White"
                    VerticalOptions="Start" />

                <Label
                    x:Name="WelcomeLabel"
                    Margin="0,20,0,10"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="Welcome Professor...."
                    TextColor="White"
                    VerticalOptions="Start" />

                <!--  Navigation Buttons  -->
                <Button
                    BackgroundColor="DarkOrange"
                    Clicked="GoToCoursePage"
                    ContentLayout="Left, 10"
                    FontAttributes="Bold"
                    FontSize="17"
                    MaximumWidthRequest="600"
                    Text="Courses"
                    TextColor="White">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="ProjectFonts" Glyph="I" />
                    </Button.ImageSource>
                </Button>
                <!--  Diego Cabanas: Created CollectionView to show the sessions happening on the current day  -->
                <Label
                    x:Name="Sessions"
                    Margin="0,20,0,10"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="Today's Sessions"
                    TextColor="White"
                    VerticalOptions="Start" />
                <CollectionView
                    x:Name="SessionCollectionView"
                    MaximumHeightRequest="500"
                    SelectionMode="None"
                    WidthRequest="600">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="0,5"
                                Padding="10"
                                BackgroundColor="#333"
                                CornerRadius="8">
                                <StackLayout Orientation="Vertical" Spacing="10">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="{Binding SessionNumber}"
                                        TextColor="White" />
                                    <Label Text="{Binding Date}" TextColor="White" />
                                    <Label Text="{Binding Duration}" TextColor="White" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
