<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfessorApp.Pages.SessionManagement"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Session Management"
    BackgroundColor="#222">

    <Grid>
        <ScrollView Grid.Row="1">
            <!--  Main Content  -->
            <VerticalStackLayout Padding="20" Spacing="10">

                <Label
                    x:Name="CourseLabel"
                    Margin="0,20,0,10"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="CourseName"
                    TextColor="White"
                    VerticalOptions="Start" />

                <CollectionView
                    x:Name="SessionCollectionView"
                    HeightRequest="700"
                    SelectionMode="None"
                    WidthRequest="600">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="0,5"
                                Padding="10"
                                BackgroundColor="#333"
                                CornerRadius="8">
                                <StackLayout Orientation="Vertical" Spacing="10">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="{Binding SessionNumber}"
                                        TextColor="White" />
                                    <Label Text="{Binding Date}" TextColor="White" />
                                    <Label Text="{Binding Duration}" TextColor="White" />
                                    <StackLayout Orientation="Horizontal" Spacing="10">
                                        <Label Text="{Binding AccessCode}" TextColor="LightBlue" />
                                        <Button
                                            Clicked="OnCopyAccessCodeClicked"
                                            CommandParameter="{Binding AccessCode}"
                                            Text="Copy" />
                                    </StackLayout>
                                    <Button
                                        BackgroundColor="DarkOrange"
                                        Clicked="OnUpdateSessionClicked"
                                        CommandParameter="{Binding SessionID}"
                                        FontAttributes="Bold"
                                        Text="Update Session"
                                        TextColor="White" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!--  Button to trigger Add Session Form  -->
                <Button
                    Margin="0,15,0,15"
                    BackgroundColor="Green"
                    Clicked="OnAddSessionClicked"
                    ContentLayout="Left, 10"
                    FontSize="17"
                    Text="Add Session"
                    TextColor="White"
                    WidthRequest="400">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="ProjectFonts" Glyph="K" />
                    </Button.ImageSource>
                </Button>

            </VerticalStackLayout>
        </ScrollView>

        <!--  Modal-style Add Session Popup  -->
        <Frame
            x:Name="AddSessionPopup"
            Grid.Row="2"
            Padding="15"
            BackgroundColor="#333"
            BorderColor="DarkOrange"
            CornerRadius="12"
            HorizontalOptions="Center"
            IsVisible="False"
            VerticalOptions="Center"
            WidthRequest="400">
            <ScrollView VerticalScrollBarVisibility="Default">
                <StackLayout Spacing="5">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="Add Session"
                        TextColor="White" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="15"
                        Text="Date"
                        TextColor="White" />
                    <DatePicker x:Name="SessionDate" TextColor="White" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="15"
                        Text="Quiz Start Time"
                        TextColor="White" />
                    <TimePicker x:Name="StartTime" TextColor="White" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="15"
                        Text="Quiz End Time"
                        TextColor="White" />
                    <TimePicker x:Name="EndTime" TextColor="White" />
                    
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                        <Button
                            BackgroundColor="Green"
                            Clicked="OnSubmitSessionClicked"
                            Text="Submit"
                            TextColor="White" />
                        <Button
                            BackgroundColor="Gray"
                            Clicked="OnCancelSessionClicked"
                            Text="Cancel"
                            TextColor="White" />
                    </HorizontalStackLayout>

                    <Label
                        x:Name="statusLabel"
                        HorizontalOptions="Center"
                        TextColor="Red" />

                </StackLayout>
            </ScrollView>
        </Frame>

        <!--  Modal-style Update Session Popup  -->
        <Frame
            x:Name="UpdateSessionPopup"
            Grid.Row="2"
            Padding="15"
            BackgroundColor="#333"
            BorderColor="DarkOrange"
            CornerRadius="12"
            HorizontalOptions="Center"
            IsVisible="False"
            VerticalOptions="Center"
            WidthRequest="400">
            <ScrollView VerticalScrollBarVisibility="Default">
                <StackLayout Spacing="5">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="Update Session"
                        TextColor="White" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="15"
                        Text="Date"
                        TextColor="White" />
                    <DatePicker x:Name="NewSessionDate" TextColor="White" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="15"
                        Text="Quiz Start Time"
                        TextColor="White" />
                    <TimePicker x:Name="NewStartTime" TextColor="White" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="15"
                        Text="Quiz End Time"
                        TextColor="White" />
                    <TimePicker x:Name="NewEndTime" TextColor="White" />

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                        <Button
                            BackgroundColor="Green"
                            Clicked="OnSubmitUpdateSessionClicked"
                            Text="Update"
                            TextColor="White" />
                        <Button
                            BackgroundColor="Gray"
                            Clicked="OnCancelUpdateSessionClicked"
                            Text="Cancel"
                            TextColor="White" />
                        <Button
                            BackgroundColor="Red"
                            Clicked="OnRemoveSessionClicked"
                            Text="Delete"
                            TextColor="White" />
                    </HorizontalStackLayout>

                    <Label
                        x:Name="updateStatusLabel"
                        HorizontalOptions="Center"
                        TextColor="Red" />

                </StackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentPage>
