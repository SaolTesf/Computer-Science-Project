<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ProfessorApp.Pages.UploadPage"
             Title="Upload Student List">

    <VerticalStackLayout Padding="20" Spacing="10">

        <!-- Select File Button -->
        <Button Text="Select File" Clicked="OnSelectFileClicked" />
        
        <!-- Button to trigger Add Student form -->
        <Button Text="Add Student" 
                Clicked="OnAddStudentClicked" 
                BackgroundColor="Green"
                TextColor="White"/>

        <!-- Add Student Form (hidden initially) -->
        <Frame x:Name="AddStudentFrame" IsVisible="False" BorderColor="Gray" BackgroundColor="LightGray" Padding="10">
            <StackLayout>
                <Entry x:Name="FirstNameEntry" Placeholder="First Name" />
                <Entry x:Name="LastNameEntry" Placeholder="Last Name" />
                <Entry x:Name="UsernameEntry" Placeholder="NETID" MaxLength="9" />
                <Entry x:Name="AddStudentUTDIDEntry" Placeholder="UTDID" MaxLength="10" />

                <Button Text="Submit" Clicked="OnSubmitStudentClicked" />
                <Button Text="Cancel" Clicked="OnCancelClicked" />
            </StackLayout>
        </Frame>

        <!-- Entry to input UTDID for deletion -->
        <Entry x:Name="DeleteUTDIDEntry" 
               Placeholder="Enter UTDID to Remove Student"
               Keyboard="Numeric" />

        <!-- Delete Student Button -->
        <Button Text="Delete Student"
                Clicked="OnDeleteStudentClicked"
                BackgroundColor="Red"
                TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
