<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProfessorApp.Pages.CoursePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#222">

    <Grid>
        <ScrollView Grid.Row="1">
            <!--  Main Content  -->
            <VerticalStackLayout Padding="20" Spacing="10">

                <Label
                    Margin="0,20,0,10"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="Courses"
                    TextColor="White"
                    VerticalOptions="Start" />

                <!--  Courses List  -->
                <CollectionView
                    x:Name="CourseCollectionView"
                    HeightRequest="400"
                    SelectionChanged="OnCourseSelected"
                    SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="0,5"
                                Padding="10"
                                BackgroundColor="DarkOrange"
                                CornerRadius="8"
                                MaximumWidthRequest="600">
                                <StackLayout>
                                    <HorizontalStackLayout Spacing="0">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="{Binding CourseNumber}"
                                            TextColor="White" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="."
                                            TextColor="White" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="{Binding Section}"
                                            TextColor="White" />
                                    </HorizontalStackLayout>
                                    <Label
                                        FontSize="15"
                                        Text="{Binding CourseName}"
                                        TextColor="White" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <StackLayout Spacing="20">
                    <Button
                        Margin="0,10,0,10"
                        BackgroundColor="Green"
                        Clicked="OnAddCourse"
                        MaximumWidthRequest="400"
                        Text="Add a new course"
                        TextColor="White" />
                </StackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!--  modal for adding course  -->
        <Frame
            x:Name="AddCoursePopUp"
            Grid.Row="2"
            Padding="10"
            BorderColor="{DynamicResource PrimaryColor}"
            CornerRadius="10"
            HasShadow="True"
            HorizontalOptions="Center"
            IsVisible="False"
            MaximumWidthRequest="1200"
            VerticalOptions="Center"
            WidthRequest="500">
            <ScrollView VerticalScrollBarVisibility="Default">
                <StackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="Add Course" />
                    <Entry
                        x:Name="courseSubjectEntry"
                        MaxLength="4"
                        Placeholder="Course Subject"
                        TextChanged="SubjectTextChanged" />
                    <Entry
                        x:Name="courseNumberEntry"
                        MaxLength="4"
                        Placeholder="Course Number"
                        TextChanged="NumberTextChanged" />
                    <Entry x:Name="courseNameEntry" Placeholder="Course" />
                    <Entry
                        x:Name="sectionEntry"
                        MaxLength="3"
                        Placeholder="Section"
                        TextChanged="NumberTextChanged" />
                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="DarkGreen"
                        Clicked="AddCourse"
                        Text="Add Course"
                        TextColor="White" />
                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="Gray"
                        Clicked="GoToCourses"
                        Text="Back To Courses"
                        TextColor="White" />
                    <Label
                        x:Name="statusLabel"
                        HorizontalOptions="Center"
                        TextColor="Red" />
                </StackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentPage>