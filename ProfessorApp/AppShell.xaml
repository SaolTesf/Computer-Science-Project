<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProfessorApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProfessorApp"
    xmlns:pages="clr-namespace:ProfessorApp.Pages"
    Title="ProfessorApp"
    Shell.FlyoutBehavior="Disabled">


    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="Home" />


    <ShellContent
        Title="Courses"
        ContentTemplate="{DataTemplate pages:CoursePage}"
        Route="Courses" />
    
    <ShellContent
        Title="Students"
        ContentTemplate="{DataTemplate pages:StudentManagement}"
        Route="StudentManagement" />

    <!-- MainPage is only for template/demo; navigation uses explicit PushAsync -->
</Shell>