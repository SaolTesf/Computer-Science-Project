using AttendanceSystem.Models; // Import the Attendance model
using System.Collections.Generic;
using System.Threading.Tasks;

namespace AttendanceSystem.Repositories
{
    public interface IAttendanceRepository
    {
        Task<IEnumerable<Attendance>> GetAllAsync(); // get all attendance recs
        Task<Attendance?> GetByIdAsync(int id); // get a spefic rec by ID
        Task<IEnumerable<Attendance>> GetPresentAttendancesAsync(); // get whose presnt
        Task AddAsync(Attendance attendance); // add a new rec to the data base
        Task UpdateAsync(Attendance attendance); // update existing rec
        Task DeleteAsync(Attendance attendance); // delete recs
    }
}
